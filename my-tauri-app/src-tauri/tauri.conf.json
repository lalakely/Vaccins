{
  "tauri": {
    "package": {
      "productName": "MyTauriApp",
      "version": "0.1.0",
      "description": "A Tauri application built on top of an existing web application.",
      "author": "Your Name",
      "license": "MIT"
    },
    "build": {
      "beforeBuildCommand": "npm run build",
      "beforeDevCommand": "npm run dev",
      "distDir": "../frontend/build",
      "devPath": "http://localhost:3000"
    },
    "tauri": {
      "window": {
        "title": "My Tauri App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      },
      "systemTray": {
        "iconPath": "icons/icon.png"
      }
    }
  }
}